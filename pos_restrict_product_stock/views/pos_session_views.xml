<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="point_of_sale.menu_pos_session_all" model="ir.ui.menu">
            <field name="groups_id" eval="[
              (6, 0, [ref('pos_restrict_product_stock.group_pos_advanced_user')])
            ]"/>
        </record>
    </data>

    <record id="view_pos_session_form_automated_closed_inherit" model="ir.ui.view">
        <field name="name">view.pos.session.form.automated.closed.inherit</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='cash_register_balance_end_real']" position="after">
                <field name="closed_automatically" invisible="not closed_automatically"/>
            </xpath>
        </field>
    </record>

    <record id="view_pos_session_search_inherit_auto_close" model="ir.ui.view">
        <field name="name">pos.session.search.inherit.auto.close</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='config_id']" position="after">
                <field name="closed_automatically"/>
            </xpath>
            <xpath expr="//filter[@name='open_sessions']" position="after">
                <separator/>
                <filter name="closed_automatically"
                        string="Closed Automatically"
                        domain="[('closed_automatically', '=', True)]"/>
            </xpath>
        </field>
    </record>
</odoo>
