<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="loyalty_reward_view_form_inherit_discount_application" model="ir.ui.view">
        <field name="name">loyalty.reward.view.form.inherit.discount.application</field>
        <field name="model">loyalty.reward</field>
        <field name="inherit_id" ref="loyalty.loyalty_reward_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='discount_applicability']" position="after">
                <field name="discount_application"
                    invisible="reward_type != 'discount'"/>
            </xpath>
        </field>
    </record>
</odoo>
