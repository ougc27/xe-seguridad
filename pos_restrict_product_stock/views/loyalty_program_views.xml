<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="loyalty_program_view_form_inherit_xe_pos" model="ir.ui.view">
        <field name="name">loyalty.program.view.form.inherit.xe.pos</field>
        <field name="model">loyalty.program</field>
        <field name="inherit_id" ref="loyalty.loyalty_program_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='%(loyalty.loyalty_generate_wizard_action)d']" position="attributes">
                <attribute name="invisible">program_type != 'coupons' or externally_managed</attribute>
            </xpath>
            <field name="date_to" position="after">
                <field name="allow_multiple_use"/>
                <field name="externally_managed"/>
            </field>
        </field>
    </record>
</odoo>
