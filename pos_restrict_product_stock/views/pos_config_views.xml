<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_config_tree_view_inherit" model="ir.ui.view">
        <field name="name">pos.config.tree.view.inherit</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_config_tree"/>
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute name="editable">bottom</attribute>
            </tree>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="sequence_id" readonly="0"/>
                <field name="sequence_line_id" readonly="0"/>
            </xpath>
        </field>
    </record>
    <record id="pos_config_view_form_inherit_hide_is_posbox" model="ir.ui.view">
        <field name="name">pos.config.form.view.inherit.hide.is_posbox</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='other_devices']" position="attributes">
                <attribute name="groups">base.group_system</attribute>
            </xpath>
            <xpath expr="//setting[field[@name='is_posbox']]" position="attributes">
                <attribute name="groups">base.group_system</attribute>
            </xpath>
            <xpath expr="//setting[field[@name='module_pos_hr']]" position="attributes">
                <attribute name="groups">base.group_system</attribute>
            </xpath>
        </field>
    </record>
</odoo>
