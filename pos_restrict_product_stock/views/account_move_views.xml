<odoo>
    <record id="account_move_form_inherit_l10n_mx_edi_pos_session" model="ir.ui.view">
        <field name="name">account.move.form.inherit.l10n.mx.edi.pos.session</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="l10n_mx_edi.account_move_form_inherit_l10n_mx_edi"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='l10n_mx_edi_usage']" position="after">
                <field name="pos_session_id" invisible="not pos_session_id"/>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="action_view_bank_payments" type="object" invisible="not pos_session_id"
                        class="oe_stat_button" icon="fa-credit-card">
                    Bank Payments
                </button>
            </xpath>
        </field>
    </record>
</odoo>
