<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_order_form_inherit_pos_restrict_product_stock" model="ir.ui.view">
        <field name="name">pos.order.form</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="reference"/>
            </xpath>
            <xpath expr="//field[@name='pricelist_id']" position="after">
                <field name="payment_plan"/>
            </xpath>
            <xpath expr="//page[@name='payments']" position="after">
                <page string="Payment Proof" name="payment_proof">
                    <field name="payment_proof_attachments" widget="many2many_binary_preview"/>
                </page>
            </xpath>
            <xpath expr="//button[@name='action_view_invoice']" position="replace">
                <field name="account_move" invisible="1"/>
                <button name="action_view_invoice" string="Invoice" type="object" class="oe_stat_button" icon="fa-pencil-square-o" invisible="not account_move"/>
            </xpath>
             <xpath expr="//button[@name='refund']" position="replace">
                <button name="refund" string="Return Products" type="object" invisible="state == 'draft' or not has_refundable_lines" groups="pos_restrict_product_stock.group_pos_advanced_user"/>
            </xpath>
            <xpath expr="//button[@name='action_pos_order_invoice']" position="replace">
                <button name="action_pos_order_invoice" string="Invoice" type="object" invisible="state not in ('paid', 'done')" groups="pos_restrict_product_stock.group_pos_advanced_user"/>
                <button name="action_pos_order_cancel" string="Cancel" type="object" invisible="state in ('cancel')" groups="pos_restrict_product_stock.group_pos_advanced_user"/>
            </xpath>
        </field>
    </record>

    <record id="pos_order_tree_inherit_pos_restrict_product_stock" model="ir.ui.view">
        <field name="name">pos.order.tree</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="reference" optional="show"/>
                <field name="payment_plan" optional="hide"/>
                <field name="paid_commission" optional="hide"/>
                <field name="amount_untaxed" optional="hide"/>
            </xpath>
        </field>
    </record>
    <record id="action_open_pos_orders_available_to_invoice" model="ir.actions.server">
        <field name="name">Open Orders Available for Invoicing</field>
        <field name="model_id" ref="point_of_sale.model_pos_order"/>
        <field name="state">code</field>
        <field name="code">
            action = env['pos.order'].action_open_available_to_invoice_orders()
        </field>
    </record>

    <menuitem
        id="menu_pos_orders_available_to_invoice"
        name="Orders Available for Invoicing"
        parent="point_of_sale.menu_point_of_sale"
        action="action_open_pos_orders_available_to_invoice"
        groups="pos_restrict_product_stock.group_pos_advanced_user"
        sequence="2"
    />

    <record id="action_paid_comission" model="ir.actions.server">
        <field name="name">Marcar como comisi√≥n pagada</field>
        <field name="model_id" ref="point_of_sale.model_pos_order"/>
        <field name="binding_model_id" ref="point_of_sale.model_pos_order"/>
        <field name="groups_id" eval="[(4, ref('account.group_account_manager')), (4, ref('base.group_erp_manager'))]"/>
        <field name="state">code</field>
        <field name="code">
for rec in records:
    paid_commission = True
    if rec.paid_commission:
        paid_commission = False
    rec.write({'paid_commission': paid_commission})
        </field>
    </record>
</odoo>
