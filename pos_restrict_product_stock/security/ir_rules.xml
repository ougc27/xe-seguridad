<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_config_rule_limited" model="ir.rule">
        <field name="name">POS Config: assigned users</field>
        <field name="model_id" ref="point_of_sale.model_pos_config"/>
        <field name="domain_force">[('res_user_ids', 'in', [user.id])]</field>
        <field name="groups" eval="[(4, ref('pos_restrict_product_stock.group_pos_access_limited'))]"/>
    </record>

    <record id="pos_order_rule_limited" model="ir.rule">
        <field name="name">POS Order: assigned users</field>
        <field name="model_id" ref="point_of_sale.model_pos_order"/>
        <field name="domain_force">[('config_id.res_user_ids', 'in', [user.id])]</field>
        <field name="groups" eval="[(4, ref('pos_restrict_product_stock.group_pos_access_limited'))]"/>
    </record>

    <record id="pos_payment_rule_limited" model="ir.rule">
        <field name="name">POS Payment: assigned users</field>
        <field name="model_id" ref="point_of_sale.model_pos_payment"/>
        <field name="domain_force">[('session_id.config_id.res_user_ids', 'in', [user.id])]</field>
        <field name="groups" eval="[(4, ref('pos_restrict_product_stock.group_pos_access_limited'))]"/>
    </record>
    
    <record id="pos_report_pos_order_rule_limited" model="ir.rule">
        <field name="name">POS Report Pos Order: assigned users</field>
        <field name="model_id" ref="point_of_sale.model_report_pos_order"/>
        <field name="domain_force">[('config_id.res_user_ids', 'in', [user.id])]</field>
        <field name="groups" eval="[(4, ref('pos_restrict_product_stock.group_pos_access_limited'))]"/>
    </record>    
</odoo>
