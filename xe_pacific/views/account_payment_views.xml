<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_payment_form_inherit_context" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.context</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id'][1]" position="attributes">
                <attribute name="context">{'default_is_company': True, 'from_account_payment': True}</attribute>
            </xpath>
    
            <xpath expr="//field[@name='partner_id'][2]" position="attributes">
                <attribute name="context">{'default_is_company': True, 'from_account_payment': True}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
