<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_heb_store_tree" model="ir.ui.view">
        <field name="name">view.heb.store.tree</field>
        <field name="model">heb.store</field>
        <field name="arch" type="xml">
            <tree string="Stores" editable="bottom">
                <field name="name"/>
                <field name="branch_number"/>
                <field name="gln"/>
            </tree>
        </field>
    </record>

    <record id="action_heb_store" model="ir.actions.act_window">
        <field name="name">HEB Store</field>
        <field name="res_model">heb.store</field>
        <field name="view_mode">tree</field>
    </record>

   <menuitem
        id="menu_heb_addenda_configuration"
        name="Addenda HEB"
        parent="base.menu_custom"
        sequence="40"
        groups="base.group_no_one"/>

    <menuitem id="menu_heb_store" 
        name="HEB Stores" 
        parent="menu_heb_addenda_configuration" 
        action="action_heb_store" 
        sequence="1"
        groups="base.group_no_one"/>
</odoo>
