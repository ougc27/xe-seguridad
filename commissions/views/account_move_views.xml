<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="account_view_move_form_inherit_commissions" model="ir.ui.view">
        <field name="name">account.view.move.form.inherit.commissions</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_open_commissions" type="object" class="oe_stat_button" icon="fa-money" invisible="commission_qty == 0">
                    <field name="commission_qty" widget="statinfo" string="Commissions"/>
                </button>
            </xpath>
            <xpath expr="//field[@name='invoice_user_id']" position="after">
                <field name="pos_originated" invisible="1"/>
                <label for="agent1_id" invisible="not pos_originated"/>
                <div invisible="not pos_originated">
                    <field name="agent1_id"
                           class="oe_inline"
                           force_save="1"
                           options="{'no_open': True, 'no_create': True}"/>
                    <span> </span>
                    <field name="agent1_per"
                           force_save="1"
                           class="oe_inline"/> %
                </div>
                <label for="agent2_id" invisible="not pos_originated"/>
                <div invisible="not pos_originated">
                    <field name="agent2_id"
                           class="oe_inline"
                           force_save="1"
                           options="{'no_open': True, 'no_create': True}"/>
                    <span> </span>
                    <field name="agent2_per"
                           force_save="1"
                           class="oe_inline"/> %
                </div>
                <field name="exclude_recalculation"
                       readonly="not is_advanced_commission_user and not is_commission_admin"
                       invisible="not pos_originated"/>
            </xpath>
        </field>
    </record>

    <record id="account_view_move_tree_inherit_commissions" model="ir.ui.view">
        <field name="name">account.view.move.tree.inherit.commissions</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_exclude_recalculation" type="object" string="Exclude recalculation"
                        groups="commissions.commission_admin_group"
                        invisible="context.get('default_move_type') not in ('out_invoice')"/>
            </xpath>
        </field>
    </record>

</odoo>