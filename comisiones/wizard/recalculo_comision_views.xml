<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="recalculo_comision_form_view" model="ir.ui.view">
        <field name="name">recalculo.comision.form.view</field>
        <field name="model">recalculo.comision</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="fch_inicial" required="1"/>
                    </group>
                    <group>
                        <field name="fch_final" required="1"/>
                    </group>
                </group>
                <group>
                    <field name="agente_ids"
                           required="1"
                           options="{'no_open': True, 'no_create': True}"
                           widget="many2many_tags"/>
                </group>
                <footer>
                    <button string="Aceptar" type="object" name="action_recalculo_comision" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>