<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="account_view_move_form_inherit_comisiones" model="ir.ui.view">
        <field name="name">account.view.move.form.inherit.comisiones</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_open_comisiones" type="object" class="oe_stat_button" icon="fa-money" invisible="ctd_comision == 0">
                    <field name="ctd_comision" widget="statinfo" string="Comisiones"/>
                </button>
            </xpath>
            <xpath expr="//field[@name='invoice_user_id']" position="after">
                <field name="es_usuario_avanzado_comision" invisible="1"/>
                <field name="es_administrador_comision" invisible="1"/>
                <label for="agente1_id"/>
                <div>
                    <field name="agente1_id"
                           class="oe_inline"
                           readonly="not es_usuario_avanzado_comision and not es_administrador_comision"
                           force_save="1"
                           options="{'no_open': True, 'no_create': True}"/>
                    <span> </span>
                    <field name="por_agente1"
                           readonly="not es_usuario_avanzado_comision and not es_administrador_comision"
                           force_save="1"
                           class="oe_inline"/> %
                </div>
                <label for="agente2_id"/>
                <div>
                    <field name="agente2_id"
                           class="oe_inline"
                           readonly="not es_usuario_avanzado_comision and not es_administrador_comision"
                           force_save="1"
                           options="{'no_open': True, 'no_create': True}"/>
                    <span> </span>
                    <field name="por_agente2"
                           readonly="not es_usuario_avanzado_comision and not es_administrador_comision"
                           force_save="1"
                           class="oe_inline"/> %
                </div>
            </xpath>
        </field>
    </record>

</odoo>