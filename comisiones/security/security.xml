<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="comisiones_module_category" model="ir.module.category">
        <field name="name">Comisiones</field>
        <field name="sequence">1</field>
    </record>

    <record id="comisiones_comisiones_module_category" model="ir.module.category">
        <field name="name">Comisiones</field>
        <field name="sequence">1</field>
        <field name="parent_id" ref="comisiones.comisiones_module_category"/>
    </record>

    <record id="comisiones_usuario_group" model="res.groups">
        <field name="name">Usuario</field>
        <field name="category_id" ref="comisiones.comisiones_comisiones_module_category"/>
        <field name="implied_ids" eval="[(6, 0, [ref('base.group_user')])]"/>
    </record>

    <record id="comisiones_usuario_avanzado_group" model="res.groups">
        <field name="name">Usuario avanzado</field>
        <field name="category_id" ref="comisiones.comisiones_comisiones_module_category"/>
        <field name="implied_ids" eval="[(6, 0, [ref('comisiones.comisiones_usuario_group')])]"/>
    </record>

    <record id="comisiones_pago_comisiones_group" model="res.groups">
        <field name="name">Pago de comisiones</field>
        <field name="category_id" ref="comisiones.comisiones_comisiones_module_category"/>
        <field name="implied_ids" eval="[(6, 0, [ref('comisiones.comisiones_usuario_avanzado_group')])]"/>
    </record>

    <record id="comisiones_administrador_group" model="res.groups">
        <field name="name">Administrador</field>
        <field name="category_id" ref="comisiones.comisiones_comisiones_module_category"/>
        <field name="implied_ids" eval="[(6, 0, [ref('comisiones.comisiones_pago_comisiones_group')])]"/>
    </record>

</odoo>